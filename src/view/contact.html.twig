{% extends "base.html.twig" %}

{% block content %}
<div class="card mx-auto my-4 w-50">
	<div class="card-header text-center">
		<h3>Contact Informations</h3> 
	</div>
	<div class="card-body d-flex flex-column bd-highlight mb-3 text-center">
		<div class="p-2 bd-highlight">
			<a class="btn btn-primary" href="https://fr.linkedin.com/in/yvain-praga-388b30179">
				<i class="fab fa-linkedin"> My Linkedin profile</i>
			</a>
		</div>
		<div class="p-2 bd-highlight">
			<kbd>praga.yvain@gmail.com</kbd>
			<button class="btn btn-warning btn-sm" onclick="copyStringToClipboard()">
				<i class="far fa-copy"></i>
			</button>
		</div>
		<div class="p-2 bd-highlight">
			<a class="btn btn-dark" href="https://github.com/YvainP">
				<i class="fab fa-github"> My Github profile</i>
			</a>
		</div>
	</div>
</div>
<script>
function copyStringToClipboard () {
	let str = "praga.yvain@gmail.com";
	// Create new element
	var el = document.createElement('textarea');
	// Set value (string to be copied)
	el.value = str;
	// Set non-editable to avoid focus and move outside of view
	el.setAttribute('readonly', '');
	el.style = {position: 'absolute', left: '-9999px'};
	document.body.appendChild(el);
	// Select text inside element
	el.select();
	// Copy text to clipboard
	document.execCommand('copy');
	// Remove temporary element
	document.body.removeChild(el);
}
</script>
{% endblock %}
